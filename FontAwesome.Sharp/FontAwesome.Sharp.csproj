<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

    <PropertyGroup>
        <SolutionDir Condition="'$(SolutionDir)' == ''">..\</SolutionDir>
        <!--<TargetFrameworks>net40;net45;net47;netcoreapp3.0</TargetFrameworks>-->
        <!-- <TargetFrameworks>net45;netcoreapp3.0</TargetFrameworks> -->
        <TargetFrameworks>net45</TargetFrameworks>
        <UseWindowsForms>true</UseWindowsForms>
        <UseWPF>true</UseWPF>
        <RootNamespace>FontAwesome.Sharp</RootNamespace>
        <AssemblyName>FontAwesome.Sharp</AssemblyName>
        <DefineConstants>$(TargetFramework.ToUpperInvariant())</DefineConstants>
        <!-- For unsafe windows forms code -->
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <PropertyGroup>
        <PackageId>FontAwesome.Sharp</PackageId>
        <Description>A library for embbeding Font Awesome icons in WPF &amp; Windows Forms applications</Description>
        <PackageLicenseUrl>License URL</PackageLicenseUrl>
        <PackageProjectUrl>https://github.com/awesome-inc/FontAwesome.Sharp</PackageProjectUrl>
        <RepositoryUrl>https://github.com/awesome-inc/FontAwesome.Sharp</RepositoryUrl>
        <!-- <PackageIconUrl>Icon URL</PackageIconUrl>
        <RepositoryType>Repo type</RepositoryType>
        <PackageTags>Tags</PackageTags>
        <PackageReleaseNotes>Release</PackageReleaseNotes> -->
    </PropertyGroup>

    <ItemGroup>
        <Resource Include="fonts\fa-brands-400.ttf" />
        <Resource Include="fonts\fa-regular-400.ttf" />
        <Resource Include="fonts\fa-solid-900.ttf" />
    </ItemGroup>

    <ItemGroup Condition="'$(NCrunch)' != '1'">
        <PackageReference Include="GitVersionTask" Version="5.0.1">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>

    <Import Project="$(SolutionDir)\solution.targets" />
</Project>
